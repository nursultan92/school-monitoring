{% extends '::base.html.twig' %}
{% block content %}
    {% set students = classgroup.students %}

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>№</th>
            <th>ф.И.О</th>
        </tr>
        </thead>
        {% for student in students %}
            <tr>
                <td>{{ loop.index +1 }}</td>
                <td>{{ student.lastname }} {{ student.firstname }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}