<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Application\SchoolBundle\Entity\ClassGroup">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="grade" type="smallint" column="grade"/>
        <field name="alphabet" type="string" length="1" column="alphabet"/>
        <one-to-many target-entity="Application\SchoolBundle\Entity\Student" field="students" mapped-by="classgroup"/>
        <one-to-one field="personal" target-entity="Application\SchoolBundle\Entity\Personal">
            <join-column name="personal_id" referenced-column-name="id"/>
        </one-to-one>
    </entity>
</doctrine-mapping>
