<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Application\SchoolBundle\Entity\Student" table="students">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="firstname" type="string" column="firstname" length="100"/>
    <field name="lastname" type="string" column="lastname" length="100"/>
    <field name="personalNumber" type="string" column="personalNumber" length="10"/>
    <field name="sex" type="string" column="sex" length="10"/>
    <field name="birthday" type="date" column="birthday"/>
    <field name="address" type="string" column="address" length="255"/>
    <field name="telephone" type="string" column="telephone" length="15" nullable="true"/>
    <field name="cameComment" type="string" column="cameComment" length="255" nullable="true"/>
    <field name="cameDate" type="string" column="cameDate" length="10" nullable="true"/>
    <field name="leftComment" type="string" column="leftComment" length="255" nullable="true"/>
    <field name="leftDate" type="string" column="leftDate" length="10" nullable="true"/>
      <many-to-one target-entity="Application\SchoolBundle\Entity\ClassGroup" field="classgroup" inversed-by="students"/>
      <many-to-one target-entity="Application\SchoolBundle\Entity\Transfer" field="cameFrom" inversed-by="studentCame" />
      <many-to-one target-entity="Application\SchoolBundle\Entity\Transfer" field="leftTo" inversed-by="studentLeft"/>
      <many-to-one target-entity="Application\SchoolBundle\Entity\Nationality" field="nationality" inversed-by="students"/>
  </entity>
</doctrine-mapping>
